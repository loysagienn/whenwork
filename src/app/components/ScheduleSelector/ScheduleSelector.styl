@import '../common.styl'

.scheduleSelector
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0
  display: flex
  justify-content: center
  align-items: center

.popup
  padding: 20px

.title
  padding-bottom: 3vmin
  text-align: center
  font-size: calc(10px + 5vmin)
  font-weight: 200

.question
  padding-bottom: 4vmin
  text-align: center
  font-size: calc(5px + 4vmin)

  .today
    padding-bottom: 2vmin

.buttons
  display: flex
  justify-content: space-around
  align-items: center

.button
  box-sizing: border-box
  min-width: 100px
  width: 22vmin
  & + &
    margin-left: 15px

.dayTip
  text-align: center
  padding-top: 4vmin
  font-size: calc(5px + 3vmin)