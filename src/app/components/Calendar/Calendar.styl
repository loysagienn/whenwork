@import '../common.styl'

.endless
  height: 100%
  margin: 0 auto
  width: 100%

.menuWrapper
  position: absolute
  left: 50%
  top: 0
  height: 0
  transform: translateX(-50%)
  width: calc(91vmin + 160px)
  max-width: 100%

.menuButton
  position: absolute
  right: 10px
  top: 10px
  padding: 12px
  +maxWidth(450px)
    padding: 10px

.editSvg
  width: 36px
  height: 36px
  +maxWidth(450px)
    width: 30px
    height: 30px